version: '2'

services:

  applications:
    image: tianon/true
    volumes:
        - ../:/var/www


### Workspace Utilities Container ###########################

  workspace:
      build:
          context: ./workspace
      volumes_from:
          - applications
      extra_hosts:
          - "dockerhost:10.0.75.1"
      ports:
         - "2222:22"
      tty: true
### Nginx Container ########################################

  nginx:
    build:
      context: ./nginx
      args:
          - PHP_UPSTREAM=php-fpm
    ports:
        - "80:80"
        - "443:443"
    links:
      - php-fpm
      - "mysql:mysqldb"
    volumes_from:
            - applications
    volumes:
      - ./logs/nginx/:/var/log/nginx
      - ./nginx/sites/:/etc/nginx/sites-available

### MySQL Container #########################################

  mysql:
      build: 
        context: ./mysql
        args:
            - MYSQL_DATABASE=homestead
            - MYSQL_USER=homestead
            - MYSQL_PASSWORD=secret
            - MYSQL_ROOT_PASSWORD=root
      volumes:
          - mysql:/var/lib/mysql
      ports:
          - "3306:3306"

### NodeJS Container ########################################

  nodeserver:
    build: 
      context: ./node
    ports:
        - "6001:6001"
        - "3000:3000"
    volumes_from:
            - applications
    volumes:
      - "./app:/src/app"
    tty: true
    links: 
      - redis
      - "mongo"

### MongoDB Container #######################################

  mongo:
      build: ./mongo
      ports:
          - "27017:27017"
      volumes:
          - mongo:/data/db

### Redis Container #########################################


  redis:
    build: ./redis
    volumes:
        - redis:/data
    ports:
        - "6379:6379"
    extra_hosts:
      - "dockerhost:10.0.75.200"

### phpMyAdmin Container ####################################

  phpmyadmin:
      build: ./phpmyadmin
      environment:
          PMA_ARBITRARY: 1
          MYSQL_USER: homestead
          MYSQL_PASSWORD: secret
          MYSQL_ROOT_PASSWORD: root
      ports:
          - "8080:80"
      links:
          - "mysql:db"
### PHP-FPM Container #######################################

  php-fpm:
    build:
        context: ./php-fpm
    volumes_from:
        - applications
    expose:
        - "9000"
    extra_hosts:
        # IMPORTANT: Replace with your Docker Host IP (will be appended to /etc/hosts)
        - "dockerhost:10.0.75.1"
    environment:
        # IMPORTANT: Set the Remote Interpreter entry matching name to `laravel`
        - PHP_IDE_CONFIG=serverName=tukada

### Volumes Setup ###########################################

volumes:
  redis:
      driver: "local"
  mysql:
      driver: "local"
  phpmyadmin:
      driver: "local"
  mongo:
      driver: "local"
  sessions:
      driver: "local"